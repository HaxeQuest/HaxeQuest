import flixel.FlxSprite;
import PlayState;
import Math;

var s:FlxSprite;
var iy:Float;
function create() {
    s = new FlxSprite().makeGraphic(500, 500, 0xffcccccc);
    PlayState.instance.add(s);
    s.screenCenter();
    iy = s.y;
}

var elapsedTime:Float = 0;
function update(elapsed) {
    elapsedTime += elapsed;
    s.y = iy + (Math.sin(elapsedTime * 2) * 25);
}